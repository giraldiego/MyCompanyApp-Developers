@page
@model FrontEnd.ListPersonsModel
@{
}
<h1>List of Persons</h1>

<table class="table">

        <tr>
            <td>Id</td>
            <td>Name</td>
            <td>Detail</td>
        </tr>

    @foreach (var person in Model.Persons)
    {
        <tr>
            <td>@person.PersonId</td>
            <td>@person.Name</td>
            <td>
                <a class="btn btn-primary table-btn" asp-page="./DetailPerson" asp-route-pk="@person.PersonId">
                    Detail
                </a>
            </td>
        </tr>
    }
</table>
