@model FrontEnd.EditModel
@{
}
<h2>Edit: @Model.Entity.Name</h2>
<form method="POST" action="">
    <div class="form-group">
        <label asp-for="Entity.Name"></label>
        <input asp-for="Entity.Name" class="form-control">
    </div>
    <div>
        <label asp-for="Entity.DateOfBirth"></label>
        <input type="date" asp-for="Entity.DateOfBirth" class="form-control">
    </div>
    <div>
        <button type="submit" class="btn btn-success">Update</button>
        <button class="btn btn-danger">Cancel</button>
    </div>

</form>


<br>

<a asp-page="./List" class="btn-default">Back to List</a>
